@model List<EM.ViewModal.userRoleViewModel>


@{ 

    var roleId = ViewBag.roleId;
}
<form method="post">
    <div class="card">
        <div class="card-header">

            <h2> Add or remove Users to this role</h2>

        </div>
        <input hidden name="roleId" value="@roleId" />
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {

           
            <div class="form-check m-2">
                <input asp-for="@Model[i].UserName" hidden value="@Model[i].UserName" />
                <input asp-for="@Model[i].UserId" hidden value="@Model[i].UserId" />
                <input asp-for="@Model[i].IsSelected" class="form-check-input" />

                &nbsp; &nbsp;&nbsp;   <label class="form-check-label" asp-for="@Model[i].IsSelected">@Model[i].UserName</label>

            </div>
            }

        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class=" btn btn-primary" />
            <a asp-action="EditRole" asp-route-Id="@roleId" value="Cancle" class="btn btn-primary"> Cancle</a>

        </div>
    </div>
  

</form>
