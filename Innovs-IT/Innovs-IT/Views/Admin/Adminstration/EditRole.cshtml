@model EM.ViewModal.editRoleViewModel

<h4>editRoleViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditRole">
            <div asp-validation-summary="ModelOnly" style=" color:red"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control"  disabled/>
                <span asp-validation-for="Id" style=" color:red"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoleName" class="control-label"></label>
                <input asp-for="RoleName" class="form-control" />
                <span asp-validation-for="RoleName" style=" color:red"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" value="Cancle" class="btn btn-primary">Cancle</a>

            </div>
            <div class="card">
                <div class="card-header"> Uses InTthe Role</div>
                <div class="card-body">
                    @if (Model.Users.Any())
                    {


                        foreach (var item in Model.Users)
                        {
                            <h5 class="card-title">@item</h5>
                        }
                    }
                    else
                    {
                <h5> None In the role</h5> 
                    }

                </div>
                <div class="card-footer">
                    <a asp-action="EditUsersInRole" asp-route-Id="@Model.Id" value="Cancle" class="btn btn-primary">Add/ Remove User</a>
                
                </div>
            </div>
        </form>
    </div>
</div>

<div>
